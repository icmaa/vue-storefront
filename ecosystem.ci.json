{
  "apps": [
    {
      "name": "server",
      "max_memory_restart": "500M",
      "instances": "1",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production"
      },
      "script": "./core/scripts/server.js",
      "node_args": "--max_old_space_size=2048",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "ignore_watch": [
        "core/build/config.json",
        "node_modules"
      ]
    }
  ]
}
